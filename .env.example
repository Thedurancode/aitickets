# Database
DATABASE_URL=sqlite:///./tickets.db

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=tickets@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Postiz (Social Media) - free, open source: https://github.com/gitroomhq/postiz-app
POSTIZ_API_KEY=your_postiz_api_key
POSTIZ_URL=https://api.postiz.com

# Apple Wallet (optional - for .pkpass generation)
APPLE_WALLET_TEAM_ID=
APPLE_WALLET_PASS_TYPE_ID=pass.com.example.event
APPLE_WALLET_CERT_PATH=
APPLE_WALLET_KEY_PATH=
APPLE_WALLET_WWDR_CERT_PATH=

# Application
BASE_URL=http://localhost:8000
UPLOADS_DIR=uploads

# Branding
ORG_NAME=Toronto Raptors
ORG_COLOR=#CE1141
ORG_LOGO_URL=https://upload.wikimedia.org/wikipedia/en/3/36/Toronto_Raptors_logo.svg

# Notifications
REMINDER_HOURS_BEFORE=24

# LLM Routing (for smart voice command parsing)
# Option 1: OpenRouter (recommended - access to many models)
OPENROUTER_API_KEY=sk-or-your-openrouter-key
LLM_ROUTER_MODEL=openai/gpt-4o-mini

# Option 2: OpenAI direct
# OPENAI_API_KEY=sk-your-openai-api-key
# LLM_ROUTER_MODEL=gpt-4o-mini

# Option 3: Zhipu AI / GLM
# ZHIPU_API_KEY=your-zhipu-api-key
# ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4/
# LLM_ROUTER_MODEL=glm-4
